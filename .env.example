# ----------------------------------------------------
# ChainBridge Configuration Template
#
# Copy this file to .env and fill in your values.
# The .env file is ignored by git for security.
# ----------------------------------------------------

# -- Application Environment --
# Options: dev, staging, production
APP_ENV="dev"

# -- ProofPacks API Configuration --
# CRITICAL: Generate a secure secret for production:
# python -c 'import secrets; print(secrets.token_hex(32))'
SIGNING_SECRET="your_signing_secret_here_CHANGE_IN_PRODUCTION"

# Runtime directory for ProofPack storage
PROOFPACK_RUNTIME_DIR="proofpacks/runtime"

# Maximum events per ProofPack (default: 100)
MAX_EVENTS_PER_PACK="100"

# Maximum depth for event details dictionary (default: 10)
MAX_EVENT_DETAIL_DEPTH="10"

# -- Server Configuration --
# Host and port for API server
HOST="0.0.0.0"
PORT="8080"

# CORS allowed origins (comma-separated, or "*" for all)
# In production, specify exact origins
CORS_ORIGINS="*"

# -- Trading Backend (Legacy) --
# Exchange to use (e.g., kraken, binance, bybit)
EXCHANGE="kraken"

# Set to "true" for paper trading, "false" for live trading
PAPER="true"

# -- API Credentials (Legacy Trading) --
# IMPORTANT: These are required for live trading (when PAPER="false")
# Replace the placeholder values with your actual API credentials
# Never commit real API keys to version control!
API_KEY="your_api_key_here"
API_SECRET="your_api_secret_here"

# -- Strategy & Symbols (Legacy Trading) --
# The symbols the bot will track and trade.
# This list is based on the strategic universe of high-utility chains.
SYMBOLS="BTC/USD,ETH/USD,SOL/USD,XRP/USD,LINK/USD"

# The timeframe for candles (e.g., 1m, 5m, 15m, 1h, 4h)
TIMEFRAME="5m"

# -- Risk Management (Legacy Trading) --
# Cooldown period in minutes after a trade signal to prevent over-trading.
COOLDOWN_MINUTES="10"

# -- ChainIQ Integration (Optional) --
# ChainIQ ML risk scoring service
CHAINIQ_URL="https://chainiq.example.com/api"
CHAINIQ_API_KEY=""

# -- Space & Time Integration (Optional) --
# Space and Time verifiable compute / zk proofs
SXT_ENDPOINT="https://api.spaceandtime.dev"
SXT_API_KEY=""

# -- Chainlink Integration (Optional) --
# Chainlink node for external actuation
CHAINLINK_NODE_URL=""
CHAINLINK_JOB_ID=""
CHAINLINK_ACCESS_KEY=""
CHAINLINK_SECRET=""

# -- XRPL / Ripple Integration (Optional) --
# XRPL network configuration
XRPL_NETWORK="testnet"
XRPL_SEED=""
XRPL_WALLET_ADDRESS=""

# -- Payment Policy Configuration --
# Default milestone release weights (comma-separated: pickup,transit,delivery)
DEFAULT_RELEASE_WEIGHTS="0.2,0.7,0.1"

# Maximum adjustment delta for risk-weighted releases
RISK_WEIGHT_MAX_DELTA="0.15"

# -- Database Configuration (Future) --
# DATABASE_URL="postgresql+psycopg2://user:pass@localhost:5432/chainbridge"
# REDIS_URL="redis://localhost:6379/0"

# -- Monitoring & Observability (Future) --
# PROMETHEUS_PORT="9090"
# JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# -- Security --
# Enable/disable request logging (may contain sensitive data)
LOG_REQUESTS="false"

# Enable/disable detailed error responses (disable in production)
DEBUG_MODE="false"
