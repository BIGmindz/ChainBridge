{{

  "files.exclude": {  // Completely disable markdownlint extension

    "**/.git": true,  "markdownlint.run": "onSave",

    "**/.svn": true,  "markdownlint.config": {

    "**/.hg": true,    "default": false

    "**/CVS": true,  },

    "**/.DS_Store": true,  

    "**/Thumbs.db": true,  // File exclusions

    "vscode-vfs://**/*": true  "files.exclude": {

  },    "**/.git": true,

  "markdownlint.config": {    "**/.venv": true,

    "default": false,    "**/node_modules": true,

    "MD013": false,    "**/__pycache__": true,

    "MD033": false    "**/*.pyc": true

  },  },

  "markdownlint.run": "onSave"  

}  // Search exclusions  

  "search.exclude": {
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true
  },
  
  // Disable validation for certain file types
  "yaml.validate": true,
  "yaml.schemas": {},
  
  // Python settings
  "python.analysis.typeCheckingMode": "basic"
}
