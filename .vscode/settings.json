{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "search.exclude": {
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "vscode-vfs://**": true
  },
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "default": false,
    "MD013": false,
    "MD022": false,
    "MD024": false,
    "MD029": false,
    "MD031": false,
    "MD033": false,
    "MD040": false,
    "MD041": false
  },
  "markdownlint.ignore": [
    "vscode-vfs://**",
    "**/node_modules/**",
    "**/.venv/**"
  ],
  "yaml.validate": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace"
}
