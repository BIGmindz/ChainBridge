{
  // Completely disable markdownlint extension
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "default": false
  },
  
  // File exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  
  // Search exclusions  
  "search.exclude": {
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true
  },
  
  // Disable validation for certain file types
  "yaml.validate": true,
  "yaml.schemas": {},
  
  // Python settings
  "python.analysis.typeCheckingMode": "basic"
}
