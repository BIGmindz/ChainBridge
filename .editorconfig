root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.{py,pyw}]
indent_style = space
indent_size = 4
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# HTML/CSS files
[*.{html,css,scss,sass,less}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Makefiles (must use tabs)
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Docker Compose
[docker-compose*.{yml,yaml}]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 0
